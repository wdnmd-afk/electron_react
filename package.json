{
  "name": "electron-react-ts-learning",
  "version": "1.0.0",
  "description": "100% TypeScript Electron + React 学习平台",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run react-dev\" \"npm run electron:dev\"",
    "react-dev": "cd frontend && vite",
    "electron:dev": "tsc && wait-on http://localhost:6322 && electron .",
    "react-build": "cd frontend && vite build",
    "electron:build": "tsc",
    "electron": "npm run electron:build && wait-on frontend/dist/index.html && electron .",
    "build": "npm run react-build && npm run electron:build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  }
}